@using Orchard.Utility.Extensions
@model IEnumerable<Orchard.ContentTypes.ViewModels.EditPartFieldViewModel>
@{
    Script.Require("ContentTypesAdmin");
}
@if (Model.Any()) {
    <table id="fields" class="table table-fw-widget data-table table-striped table-hover">
        <thead>
        <tr>
            <th>@T("Display Name")</th>
            <th>@T("Field Type")</th>
            <th class="actions"></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var field in Model) {
            var f = field;
            @Html.EditorFor(m => f, "Field", field.Prefix)
        }
        </tbody>
    </table>
}
else {
    <div role="alert" class="alert alert-info alert-icon alert-icon-color">
        <div class="icon"><span class="s7-info"></span></div>
        <div class="message">
            @T("No fields yet.")
        </div>
    </div>
}